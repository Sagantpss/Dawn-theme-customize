  > -->
</section>
{% schema %}
  {
    "name": "Custom image section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Choose Image",
        "info": "Note:Choose best quality image and 500x500 px."
      }
    ],
    "presets": [
      {
        "name": "Custom image section"
      }
    ]
  }
{% endschema %}